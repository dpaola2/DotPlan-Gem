#!/usr/bin/env ruby

require "rubygems"
require "dotplan"

commands = {
  # user commands
  'auth'        => proc { DotPlan::Command::Auth.run },
  'register'    => proc { DotPlan::Command::Register.run },
  'help'        => proc { DotPlan::Command::Help.run },
}

if ARGV.first && commands.keys.include?(ARGV.first.downcase)
  begin
    commands[ARGV.first.downcase].call
  rescue => e
    puts e
  end
else
  begin
    puts "todo".green
  rescue => e
    puts e
  end
end